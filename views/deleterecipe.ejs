<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>CulinaryCove - Recipe Details</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">CulinaryCove</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <input type="text" id="searchInput" class="form-control mb-3" placeholder="search for recipes..." style="max-width:500px;">
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/viewrecipe">View All Recipe</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/submitrecipe">Submit Recipe</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/addingredient">Add Ingredient</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/profile">Delete Recipe</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <table class="table table-hover small text-center">
      <thead>
          <tr>
            <th width="100">Product Name</th>
            <th width="100">Description</th>
            <th width="50">Created On</th>
            <th width="50">Updated On</th>
            <th width="50">Delete</th>
          </tr>
      </thead>
      <tbody>
        <% for(let i=0; i < recipe.length; i++) { %>
          <tr>
            <td><a href="/recipe/<%= recipe[i].recipe_id %>" ><%= recipe[i].title %></a></td>
            <td><%= recipe[i].description %></td>
            <td><%= recipe[i].created_on %></td>
            <td><%= recipe[i].updated_on %></td>
            <td><a href="/deleterecipe/<%= recipe[i].recipe_id %>" class="btn btn-danger">Delete</a></td>
          </tr>
        <% } %>
      </tbody>
    </table>
</body>
</html>
