<!-- student.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>StudentListApp</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">StudentListApp</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/addstudent">Add new student</a>
              </li> 
            </ul>
          </div>
        </div>
    </nav>
    
    <div class="container">
        <br>
        <div class="text-center"><h2>Student Details</h2></div>
        <br>
        <% if (students) { %> <!-- Check if student data exists -->
            <div>
              <p><b>Student Name:</b><br> <%= students.name %></p>
              <p><b>Student Image:</b><br> <img src = "../images/<%= students.image %>" width="20%"></p>
              <p><b>Dob:</b><br> <%= students.dob.toLocaleDateString("en-US", { year: "numeric", month: "short", day: "numeric" }) %></p>
              <p><b>contact:</b><br> <%= students.contact %></p> 
            </div>
        <% } else { %>
            <p>No student found.</p>
        <% } %>
        <a href ="/">Back</a>
    </div>
    
</body>
</html>
